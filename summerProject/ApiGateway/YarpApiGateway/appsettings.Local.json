{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "catalog-route": {
                "ClusterId": "catalog-cluster",
                "Match": {
                    "Path": "/catalog-service/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "{**catch-all}" }
                ]
            },
            "scheduling-route": {
                "ClusterId": "scheduling-cluster",
                "Match": {
                    "Path": "/scheduling-service/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "{**catch-all}" }
                ]
            },
            "ordering-route": {
                "ClusterId": "ordering-cluster",
                "Match": {
                    "Path": "/ordering-service/{**catch-all}"
                },
                "Transforms": [
                    { "PathPattern": "{**catch-all}" }
                ]
            }
        },
        "Clusters": {
            "catalog-cluster": {
                "Destinations": {
                    "local1": {
                        "Address": "http://localhost:6000/"
                    }
                }
            },
            "scheduling-cluster": {
                "Destinations": {
                    "local1": {
                        "Address": "http://localhost:6002/"
                    }
                }
            },
            "ordering-cluster": {
                "Destinations": {
                    "local1": {
                        "Address": "http://localhost:6003/"
                    }
                }
            }
        }
    },

    "SwaggerSources": {
        "Catalog": "http://localhost:6000/swagger/v1/swagger.json",
        "Scheduling": "http://localhost:6002/swagger/v1/swagger.json",
        "Ordering": "http://localhost:6003/swagger/v1/swagger.json"
    }
}
