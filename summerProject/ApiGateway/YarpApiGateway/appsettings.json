{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ReverseProxy": {
        "Routes": {
            "catalog-route": {
                "ClusterId": "catalog-cluster",
                "Match": { "Path": "/catalog-service/{**catch-all}" },
                "Transforms": [ { "PathPattern": "{**catch-all}" } ]
            },
            "scheduling-route": {
                "ClusterId": "scheduling-cluster",
                "Match": { "Path": "/scheduling-service/{**catch-all}" },
                "Transforms": [ { "PathPattern": "{**catch-all}" } ]
            },
            "ordering-route": {
                "ClusterId": "ordering-cluster",
                "Match": { "Path": "/ordering-service/{**catch-all}" },
                "Transforms": [ { "PathPattern": "{**catch-all}" } ],
                "RateLimiterPolicy": "fixed"
            }
        },

        "Clusters": {
            "catalog-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://catalog.api:8080/" }
                }
            },
            "scheduling-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://scheduling.api:8080/" }
                }
            },
            "ordering-cluster": {
                "Destinations": {
                    "d1": { "Address": "http://orderingapi:8080/" }
                }
            }
        }
    },

    "SwaggerSources": {
        "Catalog": "http://catalog.api:8080/swagger/v1/swagger.json",
        "Scheduling": "http://scheduling.api:8080/swagger/v1/swagger.json",
        "Ordering": "http://orderingapi:8080/swagger/v1/swagger.json"
    }



}
